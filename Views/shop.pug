doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Shop
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }
      header {
          margin-bottom: 20px;
      }
      nav {
          width: 100%;
          height: 10vh;
          background-color: yellow;
          color: black;
          display: flex;
          align-items: center;
          justify-content: center;
      }
      nav ul {
          list-style: none;
          display: flex;
          gap: 20px;
          padding: 0;
          margin: 0;
      }
      nav ul li {
          margin: 0;
      }
      nav ul li a {
          text-decoration: none;
          color: black;
          font-weight: bold;
          padding: 10px 20px;
          transition: background-color 0.3s ease;
      }
      nav ul li a:hover {
          background-color: #ddd;
      }
      main {
          padding: 20px;
          text-align: center;
      }
      h1 {
          color: #333;
      }
      ul {
          list-style: none;
          padding: 0;
      }
      li {
          padding: 10px;
          border-bottom: 1px solid #ccc;
      }
  body
    header
      nav
        ul
          li
            a(href="/") Shop
          li
            a(href="/admin/add-product") Add Product
    main
      h1 My Products
      ul
        each product in prods
          li= product.title

