doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Add Product
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }
      header {
          margin-bottom: 20px;
      }
      nav {
          width: 100%;
          height: 10vh;
          background-color: yellow;
          color: black;
          display: flex;
          align-items: center;
          justify-content: center;
      }
      nav ul {
          list-style: none;
          display: flex;
          gap: 20px;
          padding: 0;
          margin: 0;
      }
      nav ul li {
          margin: 0;
      }
      nav ul li a {
          text-decoration: none;
          color: black;
          font-weight: bold;
          padding: 10px 20px;
          transition: background-color 0.3s ease;
      }
      nav ul li a:hover {
          background-color: #ddd;
      }
      main {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 80vh;
      }
      form {
          display: flex;
          flex-direction: column;
          gap: 10px;
      }
      input[type="text"] {
          padding: 10px;
          font-size: 1rem;
          border: 1px solid #ccc;
          border-radius: 5px;
          width: 200px;
      }
      button {
          padding: 10px;
          font-size: 1rem;
          border: none;
          border-radius: 5px;
          background-color: black;
          color: white;
          cursor: pointer;
          transition: background-color 0.3s ease;
      }
      button:hover {
          background-color: #333;
      }
  body
    header
      nav
        ul
          li
            a(href="/") Shop
          li
            a(href="/admin/add-product") Add Product
    main
      form(action="/admin/add-product" method="POST")
        input(type="text" name="title" required placeholder="Product Title")
        button(type="submit") Add
